  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --tsc --watch",
    "start:prod": "cross-env NODE_ENV=prod node dist/apps/api/main",
    "start:docker": "docker-compose up -d",
    "docker": "sh ./build.sh && docker-compose up --build -d",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "generate": "drizzle-kit generate:pg --config=drizzle.config.ts",
    "migrate": "tsx ./migration.ts",
    "push": "drizzle-kit push:pg --config=drizzle.config.ts",
    "studio": "drizzle-kit studio --port 5555 --verbose",
    "drop": "drizzle-kit drop --out=.drizzle"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.5.7",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
