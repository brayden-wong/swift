    "@nestjs/jwt": "^10.1.0",
    "@nestjs/microservices": "^10.1.3",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/schedule": "^3.0.2",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.28.2",
    "nestjs-zod": "^2.3.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.21.4"
  },
